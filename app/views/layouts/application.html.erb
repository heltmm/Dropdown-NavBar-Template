<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'layouts/nav' %>
    <div>
        <%= flash[:notice] %>
    </div>
    <div>
        <%= flash[:alert] %>
    </div>
    <div class='container'>
      <%= yield %>
    </div>
  </body>
</html>
